# components/search_ui.R
library(shiny)

search_ui <- function() {
  fluidPage(
    box(
      title = "Search",
      status = "primary",
      solidHeader = TRUE,
      width = 12,
      textInput("search_input", label = "Enter search words", placeholder = "e.g., keyword1, keyword2"),
      actionButton("search_button", "Search", icon = icon("search"))
    ),
    
    box(
      title = "Search Results",
      status = "primary",
      solidHeader = TRUE,
      width = 12,
      DTOutput("search_result"),
      verbatimTextOutput("error")  # Using verbatimTextOutput for displaying error messages
    )
  )
}
